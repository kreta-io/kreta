<header id="main-header" class="row">
    <div class="small-3 column">
        <a href="{{ url('kreta_web_dashboard') }}"><img class="logo" src="{{ asset(base_asset_img ~ 'logo.png') }}"/></a>
    </div>
    <div class="kreta-user-menu small-9 columns">
        {{ render(url('kreta_web_component_notification_icon')) }}
        <div class="user-container">
            <img class="kreta-user-image" src="{{ app.user.photo ? app.user.photo.name|imagine_filter('kreta_small') : asset(base_asset_img ~ 'user.jpg') }}">
            {% if app.user.firstName is not null and app.user.lastName is not null %}
                <span>{{ app.user.firstName }} {{ app.user.lastName }}</span>
            {% else %}
                <span>{{ app.user.email }}</span>
            {% endif %}
            <div class="user-actions">
                <a href="{{ url('kreta_web_user_edit') }}"><i class="fa fa-wrench"></i></a>
                <a href="{{ url('fos_user_security_logout') }}"><i class="fa fa-sign-out"></i></a>
            </div>
        </div>
    </div>
</header>
