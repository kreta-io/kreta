{% extends 'KretaWebBundle:blocks:widget.html.twig' %}

{% block widgetClass %}medium-4 column{% endblock %}

{% block widgetIcon %}fa-book{% endblock %}

{% block widgetTitle %}My projects{% endblock %}

{% block widgetContent %}
    <div class="kreta-mini-project">
        {% for project in projects %}
            <div class="title-container">
                <img src="{{ project.image ? project.image.name|imagine_filter('kreta_small') : asset(base_asset_img ~ 'project.jpg') }}">
                <a href="{{ url('kreta_web_project_view', {'projectShortName': project.shortName}) }}">
                    {{ project.shortName }}
                </a>
            </div>
        {% else %}
            <div class="kreta-widget-message">
                <p>No projects found</p>
            </div>
        {% endfor %}
        <div class="kreta-actions">
            <a href="{{ url('kreta_web_project_new') }}"><i class="fa fa-plus"></i>
                Add project
            </a>
        </div>
    </div>
{% endblock %}
