{
    "name": "kreta/web-bundle",
    "description": "Kreta web bundle",
    "keywords": ["project", "manager", "development", "tool", "web", "bundle"],
    "homepage": "http://kreta.io",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Beñat Espiña Diaz",
            "email": "benatespina@gmail.com",
            "homepage": "http://benatespina.com"
        },
        {
            "name": "Gorka Laucirica Ibarra",
            "email": "gorka.lauzirika@gmail.com",
            "homepage": "http://gorkalaucirica.net"
        }
    ],
    "require": {
        "php":                                 ">=5.4",

        "kreta/comment-bundle":                "~0.1.0",
        "kreta/issue-bundle":                  "~0.1.0",
        "kreta/media-bundle":                  "~0.1.0",
        "kreta/notification-bundle":           "~0.1.0",
        "kreta/project-bundle":                "~0.1.0",
        "kreta/user-bundle":                   "~0.1.0",
        "kreta/vcs-bundle":                    "~0.1.0"
    },
    "require-dev": {
        "phpspec/phpspec":                     "~2.1",
        "henrikbjorn/phpspec-code-coverage":   "~1.0",
        "satooshi/php-coveralls":              "0.6.1",
        "squizlabs/php_codesniffer":           "~1.0",
        "phpmd/phpmd":                         "~2.1"
    },
    "suggest": {
        "kreta/fixtures-bundle": "Provides default Kreta fixtures"
    },
    "autoload": {
        "psr-4": { "Kreta\\Bundle\\WebBundle\\": "" }
    },
    "autoload-dev": {
        "psr-4": { "Kreta\\Bundle\\WebBundle\\spec\\": "spec/" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    }
}
