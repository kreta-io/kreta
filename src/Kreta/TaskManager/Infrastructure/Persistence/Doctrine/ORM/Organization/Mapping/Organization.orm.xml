<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Kreta\TaskManager\Domain\Model\Organization\Organization" table="organization">
        <id name="id" type="organization_id"/>

        <embedded name="slug" class="Kreta\SharedKernel\Domain\Model\Identity\Slug" use-column-prefix="false"/>

        <field name="name" type="string" column="name" length="255" nullable="false"/>
        <field name="createdOn" type="datetime" column="created_on" nullable="false"/>
        <field name="updatedOn" type="datetime" column="updated_on" nullable="false"/>

        <many-to-many field="members" target-entity="Kreta\TaskManager\Domain\Model\Organization\Member">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-table name="organizations_members">
                <join-columns>
                    <join-column name="organization_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_id" referenced-column-name="user_id" unique="true"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="owners" target-entity="Kreta\TaskManager\Domain\Model\Organization\Owner">
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-table name="organizations_owners">
                <join-columns>
                    <join-column name="organization_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_id" referenced-column-name="user_id" unique="true"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
